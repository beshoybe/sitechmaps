<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="200dp"
    android:gravity="left"
    android:layout_gravity="left"
    android:paddingHorizontal="10dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="#F6FBFF"
    >

    <View
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        android:background="#606EB2"

         />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:filterTouchesWhenObscured="false"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                >

                <TextView
                    android:id="@+id/timeRemainingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="19 Min"
                    android:fontFamily="@font/oxygen_bold"

                    android:textColor="#000"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_weight="0.5"
                >

                <TextView
                    android:id="@+id/distanceRemainingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:fontFamily="@font/oxygen_regular"

                    android:text="1.5 KM"
                    android:textColor="#7E909A"
                    android:textFontWeight="400"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"

                    android:text="to destination"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    android:textColor="#7E909A"
                    />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F8FE"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/fullDestination"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:height="20dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="Number of building, Name St, Riyad, Saudi Arabia"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#313644"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:typeface="normal" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/Button1"
        android:layout_width="match_parent"
        android:background="@drawable/button_backround"
        android:text="End Journey"
        android:animateLayoutChanges="true"

        android:minHeight="0dip"
        android:minWidth="0dip"
        android:textSize="14sp"
        android:fontFamily="@font/oxygen_bold"
        android:textColor="#FFF"
        android:paddingVertical="12.5dp"
        android:layout_height="48dp"/>

    <LinearLayout
        android:layout_marginVertical="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/makeCall"
                    android:foregroundGravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/call_icon" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/contactName"
                android:gravity="center"
                android:text="Jeddah"
                android:singleLine="true"
                android:layout_weight="0.6"
                android:textSize="14sp"
                android:textColor="#313644"
                android:textFontWeight="700"
                android:fontFamily="@font/oxygen_bold"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_weight="0.2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="               "
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="12dp"
            android:id="@+id/tripRoute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oxygen_bold"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:text="Trip Route"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sourceText"
                    android:layout_width="wrap_content"
                    android:text="Reyadah"
                    android:textSize="12sp"
                    android:layout_weight="0.25"
                    android:singleLine="true"
                    android:textColor="#313644"
                    android:fontFamily="@font/oxygen_bold"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/route_photo" />
                <TextView
                    android:id="@+id/destinationText"
                    android:layout_width="wrap_content"
                    android:text="Jeddah"
                    android:singleLine="true"
                    android:layout_weight="0.25"
                    android:textSize="12sp"
                    android:textColor="#313644"
                    android:textFontWeight="700"
                    android:fontFamily="@font/oxygen_bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/vehicle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oxygen_bold"
            android:textFontWeight="700"
            android:textSize="14sp"
            android:text="Vehicle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_weight="0.25"

               android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:elevation="12dp"
                   android:id="@+id/view2"
                   app:cardCornerRadius="8dp"
                   android:layout_centerHorizontal="true"
                   android:innerRadius="0dp"
                   android:shape="ring"
                   android:thicknessRatio="1.9">
                   <ImageView
                       android:id="@+id/vehicleImage"
                       android:scaleType="centerCrop"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
               </androidx.cardview.widget.CardView>
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Type"
                    android:textSize="14sp"
                    android:fontFamily="@font/oxygen_regular"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vehcileModel"
                    android:layout_width="wrap_content"
                    android:text="Hyundai Kona"
                    android:fontFamily="@font/oxygen_bold"
                    android:textColor="#313644"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.25"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Plate number"
                    android:textSize="14sp"
                    android:fontFamily="@font/oxygen_regular"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/plateNumber"
                    android:layout_width="wrap_content"
                    android:text="3542 TNJ"
                    android:fontFamily="@font/oxygen_bold"
                    android:textColor="#313644"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:minHeight="0dip"
        android:minWidth="0dip"
        android:id="@+id/Button2"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:background="@drawable/button_backround"
        android:text="End Journey"
        android:textSize="14sp"
        android:fontFamily="@font/oxygen_bold"
        android:textColor="#FFF"
        android:layout_marginBottom="12dp"
        android:paddingVertical="12.5dp"
        android:layout_height="48dp"/>
</LinearLayout>